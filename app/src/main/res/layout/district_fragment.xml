<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    android:id="@+id/scroll"
   >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".District"
   >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="8dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="6dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newsDate"
                android:text="COVID19 CASES IN KANPUR:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="140dp"

        android:layout_height="110dp"
        android:textAlignment="center"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg3"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:id="@+id/image1"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:textColor="#6e1613"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#6e1613"
                android:textStyle="bold"
                android:textSize="16sp"
                android:id="@+id/confirmed"
                android:textAlignment="center"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:textAlignment="center"
        app:cardBackgroundColor="#a1e998"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg4"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:id="@+id/image2"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="#733f14"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#733f14"
                android:textStyle="bold"
                android:textSize="16sp"
                android:id="@+id/active"
                android:textAlignment="center"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:textAlignment="center"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:id="@+id/image">

            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deceased"
                android:textColor="#103c65"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#103c65"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/deceased"
                android:textAlignment="center"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:textAlignment="center"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg2"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:id="@+id/image3"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recovered"
                android:textColor="#217535"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#217535"
                android:textStyle="bold"
                android:textSize="16sp"
                android:id="@+id/recovered"
                android:textAlignment="center"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>
    <Button
        android:layout_margin="15dp"
        android:id="@+id/button"
        android:text="Learn More!"
        android:textColor="@android:color/white"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
></Button>

    <Button
        android:layout_margin="10dp"
        android:id="@+id/button1"
        android:text="FAQ ON COVID19!"
        android:textColor="@android:color/white"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></Button>



</LinearLayout>
</ScrollView>
